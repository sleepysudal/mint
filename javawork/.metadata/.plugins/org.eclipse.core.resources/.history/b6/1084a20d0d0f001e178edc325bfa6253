package day0620;

import java.util.Scanner;

public class IfMaxNum_04 {

	public static void main(String[] args) {
		/*
		 3개 
		 */
		//임포트
		Scanner sc=new Scanner(System.in);
		//변수지정
		int x,y,z;
		int max1,max2;
		//값입력받기
		System.out.println("3개의 수 입력");
		x=sc.nextInt();
		y=sc.nextInt();
		z=sc.nextInt();
		
		//if문
		if(x>y) {
			System.out.println("max1=x");
		}
		else if(max1>z) {
			System.out.println("max1=x");
		}
		else
			System.out.println("max1=z");
			
			//삼항연산자
			max2=(x>y)?x:y;
			(max2>z)?x:z;
			
		
			 
